<%- include('partials/header') %>


<div class="results">
    <table>
    <tr>
        <th>Position</th>
        <th>Club</th>
        <th>Won</th>
        <th>Lost</th>
        <th>GD</th>
        <th>Points</th>
    </tr>
    <% table.forEach((team) => { %>
        <tr>
            <td><%= team.position%></td>
            <td><%= team.team.shortName%></td>
            <td><%= team.won%></td>
            <td><%= team.lost%></td>
            <td><%= team.goalDifference%></td>
            <td><%= team.points%></td>
        </tr>
    <% }) %>
    </table>
    <div class="right-side">
    <% mainArray.forEach( (matchday, index) => { %>
        
        <div class="matchday-column" 
        <% if( index  === currentMatchday()){ %>
            style="opacity: 1;"
        <% } else{ %>
            style="opacity: 0;display: none"
        <% } %>
        data-matchday=<%= index %>>
            <div class="heading-matchday">
                <button class="left-toggle" > < </button>
                <h1>Matchday <%= index %></h1>
                <button class="right-toggle"> > </button>
            </div>
            <% matchday.forEach((element) => { %>
                <div class="match">
                        <img src= <%= element.homeTeam.crest %>  alt="" class="home">
                        <span> <%= element.score.fullTime.home %> - <%= element.score.fullTime.away %> </span>
                        <img src= <%= element.awayTeam.crest %>  alt="" class="away">
                   </div>
                 <% }) %>
        </div>
    <% }) %>
    </div>

   
</div>

<form action="/home" method="post" class="logout-form">
    <button type="submit" class="log-out">Log Out</button>
</form>

